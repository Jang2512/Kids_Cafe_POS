  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls,
  Vcl.Imaging.jpeg;

type
  TGuestNum = class(TForm)
    Panel1: TPanel;
    Label1: TLabel;
    Panel2: TPanel;
    edtkid: TEdit;
    btn1: TButton;
    btn2: TButton;
    btn3: TButton;
    btn5: TButton;
    btn4: TButton;
    btn6: TButton;
    btn8: TButton;
    btn7: TButton;
    btn9: TButton;
    btn0: TButton;
    btn11: TButton;
    Ent: TButton;
    Cancel: TButton;
    btn10: TButton;
    Panel3: TPanel;
    edtadult: TEdit;
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    Button6: TButton;
    Button0: TButton;
    Button4: TButton;
    Button5: TButton;
    Button7: TButton;
    Button8: TButton;
